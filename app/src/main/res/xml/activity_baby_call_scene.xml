<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:targetId="@id/btn_media"> </OnClick>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/btn_camera"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintVertical_bias="0.909"
            motion:layout_constraintHorizontal_bias="0.501" />
        <Constraint
            android:layout_height="60dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="60dp"
            android:id="@+id/btn_videocall"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.909"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.501" />
        <Constraint
            android:layout_height="60dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="60dp"
            android:id="@+id/btn_voice"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.909"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.498" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/btn_voice"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.661"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp" />
        <Constraint
            android:layout_height="60dp"
            motion:layout_editor_absoluteX="175dp"
            android:layout_width="60dp"
            android:id="@+id/btn_videocall"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="444dp" />
        <Constraint
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/btn_camera"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.661"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />
    </ConstraintSet>
</MotionScene>