<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/btnaddheardphone" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end1"
        motion:constraintSetStart="@id/imageView"
        motion:duration="1000">
        <OnClick motion:targetId="@+id/btnaddcamera" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/imageView"
        motion:duration="1000">
        <OnClick motion:targetId="@+id/btncontroller" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView"
            motion:layout_constraintEnd_toEndOf="@+id/imageView3"
            motion:layout_constraintStart_toStartOf="@+id/imageView3"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView3"
            motion:layout_constraintTop_toTopOf="@+id/imageView3"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end1">

        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView4"
            motion:layout_constraintEnd_toEndOf="@+id/imageView3"
            motion:layout_constraintStart_toStartOf="@+id/imageView3"
            motion:layout_constraintBottom_toBottomOf="@+id/imageView3"
            motion:layout_constraintTop_toTopOf="@+id/imageView3"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">

        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView5"
            motion:layout_constraintStart_toStartOf="@+id/imageView3"
            android:visibility="invisible"
            motion:layout_editor_absoluteY="619dp" />
    </ConstraintSet>

</MotionScene>